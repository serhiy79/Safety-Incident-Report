@model PagedList.IPagedList<SIR.TEmployee>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2>Employee Portal</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "TEmployees", FormMethod.Get))
{
    <div class="form-group">
        <div>
            @*Find by name:<input type="text" name="SearchString" class="form-control-date " />*@
            Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string,  new { @class = "form-control-date " })
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
}
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.TWorkLocation.LocationName)
        </th>*@
        <th>LocationName</th>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>*@
        <th>FirstName</th>
        @*<th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>*@
        <th>
            @Html.ActionLink("LastName", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.Address)
        </th>*@
        <th>Address</th>
        @*<th>
            @Html.DisplayNameFor(model => model.City)
        </th>*@
        <th>City</th>
        @*<th>
            @Html.DisplayNameFor(model => model.State)
        </th>*@
        <th>State</th>
        @*<th>
            @Html.DisplayNameFor(model => model.Zip)
        </th>*@
        <th>Zip</th>
        @*<th>
            @Html.DisplayNameFor(model => model.Position)
        </th>*@
        <th>Position</th>
        <th>
            @Html.ActionLink("StartDate", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.Shift)
        </th>*@
        <th>Shift</th>
        @*<th>
            @Html.DisplayNameFor(model => model.SafetyRecord)
        </th>*@
        <th>SafetyRecord</th>
        @*<th>
            @Html.DisplayNameFor(model => model.IPMScore)
        </th>*@
        <th>IPMScore</th>
        @*<th>
            @Html.DisplayNameFor(model => model.Active)
        </th>*@
        <th>Active</th>
        @*<th>
            @Html.DisplayNameFor(model => model.ManagerName)
        </th>*@
        <th>ManagerName</th>
        <th></th>
    </tr>
   
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TWorkLocation.LocationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.MiddleName)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shift)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SafetyRecord)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IPMScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManagerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeID }) 
            @*@Html.ActionLink("Delete", "Delete", new { id=item.EmployeeID })*@
        </td>
    </tr>
}

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
